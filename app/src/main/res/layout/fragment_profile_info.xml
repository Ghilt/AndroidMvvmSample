    xmlns:tools="http://schemas.android.com/tools"
    tools:context="mvvmtest.shouse.se.mvvmtest.ProfileInfoFragment">

    <data>
        <variable
            name="data"
            type="mvvmtest.shouse.se.mvvmtest.ProfileInfoViewModel" />
    </data>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
